<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="10"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4"
            android:orientation="vertical">

            <EditText
                android:id="@+id/et_value"
                android:layout_marginTop="80dp"
                android:layout_marginStart="100dp"
                android:layout_marginEnd="100dp"
                android:textAlignment="center"
                android:textSize="30sp"
                android:textStyle="bold"
                android:textColorHint="@color/black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="ENTER VALUE">

            </EditText>

            <TextView
                android:id="@+id/tv_answer"
                android:layout_width="match_parent"
                android:layout_marginTop="80dp"
                android:layout_marginEnd="140dp"
                android:layout_marginStart="140dp"
                android:layout_height="wrap_content"
                android:text="ANSWER"
                android:textColor="@color/black"
                android:textAlignment="center"
                android:textSize="30sp">

            </TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="6"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:weightSum="4"
                android:orientation="horizontal"
                android:layout_marginTop="55dp"
                >

                <Button
                    android:id="@+id/btn_euro"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="10dp"
                    android:text="EURO">

                </Button>

                <Button
                    android:id="@+id/btn_dollar"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:textSize="12sp"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="10dp"
                    android:layout_weight="1"
                    android:text="DOLLAR">

                </Button>

                <Button
                    android:id="@+id/btn_pound"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="10dp"
                    android:text="POUND">

                </Button>

                <Button
                    android:id="@+id/btn_yen_id"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    android:text="YEN">

                </Button>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:weightSum="4"
                android:orientation="horizontal"
                android:layout_marginTop="40dp"
                >

                <Button
                    android:id="@+id/btn_rand_id"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="10dp"
                    android:text="RAND">

                </Button>

                <Button
                    android:id="@+id/btn_franc_id"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="10dp"
                    android:text="FRANC"
                    >

                </Button>

                <Button
                    android:id="@+id/btn_riyal_id"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="10dp"
                    android:text="RIYAL">

                </Button>

                <Button
                    android:id="@+id/btn_rupee_id"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    android:text="RUPEE">

                </Button>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:weightSum="4"
                android:orientation="horizontal"
                android:layout_marginTop="40dp"
                >

                <Button
                    android:id="@+id/yuan_id"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="10dp"
                    android:text="YUAN">

                </Button>

                <Button
                    android:id="@+id/btn_kroner_id"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:textSize="12sp"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="10dp"
                    android:text="KRONER"
                    >

                </Button>

                <Button
                    android:id="@+id/btn_bif_id"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="10dp"
                    android:text="BIF">

                </Button>

                <Button
                    android:id="@+id/btn_rwe_id"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    android:text="RWE">

                </Button>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:weightSum="4"
                android:orientation="horizontal"
                android:layout_marginTop="40dp"
                >

                <Button
                    android:id="@+id/btn_can$_id"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="10dp"
                    android:text="CAN$">

                </Button>

                <Button
                    android:id="@+id/btn_dirham_id"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:textSize="12sp"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="10dp"
                    android:text="DIRHAM"
                    >

                </Button>

                <Button
                    android:id="@+id/btn_tshs_btn_id"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="10dp"
                    android:text="TSHS">

                </Button>

                <Button
                    android:id="@+id/btn_ushs_id"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    android:text="USHS">

                </Button>

            </LinearLayout>


        </LinearLayout>

    </LinearLayout>


</RelativeLayout>